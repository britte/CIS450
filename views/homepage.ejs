<!DOCTYPE html>
<html>
<head>
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>

  <script>
    $( "#searchForm" ).submit(function( event ) {
 
        // Stop form from submitting normally
        event.preventDefault();
 
        // Get some values from elements on the page:
        var $form = $( this ),
            term = $form.find( "input[name='searchTerm']" ).val(),
            url = $form.attr( "action" );
 
          // Send the data using post
        var getting = $.get( url, { searchTerm: term } );
 
        // Put the results in a div
        getting.done(function( data ) {
            var content = $( data ).find( "#data" );
            $( "#result" ).empty().append( content );
        });
    });
  </script>

  <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" media="screen">
</head>
<body>
    <h1><%= user.NAME %></h1>
    <form action='/api/search' method="post" id="searchForm">
        <input name="searchTerm" type ="text">
        <input class='btn' type="submit" value="search" onClick="doshit()">
    </form>

    <div id="result">

    </div>
    <% if (private) { %>
        <form action="/api/request-friend/<%=user.ID%>" method="post">
            <input class="btn" type="submit" value="Request Friend">
        </form>
        You are not friends with this user yet. Add them to see their profile.
    <% } else {%>
        <% if (user.AFFILIATION) { %>
            <p>Affiliation: <%= user.AFFILIATION %></p>
            <br/>
        <% } %>
        <div class="col-xs-12">
            <% if (currentUser) { %>
                <button class="btn" onclick="location.href = '/user-edit';"> Edit Info </button>
            <% } %>
            <button class="btn" onclick="location.href = '/friends';"> Friends </button>
            <button class="btn" onclick="location.href = '/albums';"> Albums </button>
            <button class="btn" onclick="location.href = '/trips';"> Trips </button>
            <button class="btn" onclick="location.href = '/pending';"> Pending Requests </button>
        </div>
        <div class="col-xs-12">
        <% for (i = 0; i < news.length; i++) { %>
            <% var n = news[i] %>
            <% if (n.TYP == 'friend') { %>
                <li>
                    <a href="/homepage/<%=n.F_LOGIN%>"><%=n.F_NAME%></a> and
                    <a href="/homepage/<%=n.MISC%>"><%=n.NAME%></a> just became friends!
                </li>
            <% } %>
            <% if (n.TYP == 'trip') { %>
                <li>
                    <a href="/homepage/<%=n.F_LOGIN%>"><%=n.F_NAME%></a> just created a new trip:
                    <a href="/trip/<%=n.ID%>"><%=n.NAME%></a>
                </li>
            <% } %>
            <% if (n.TYP == 'album') { %>
                <li>
                    <a href="/homepage/<%=n.F_LOGIN%>"><%=n.F_NAME%></a> just created a new album:
                    <a href="/album/<%=n.ID%>"><%=n.NAME%></a>
                </li>
            <% } %>
        <% } %>
        </div>
    <% } %>
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
